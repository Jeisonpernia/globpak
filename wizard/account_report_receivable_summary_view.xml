<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>

    <record id="account_report_receivable_summary_view" model="ir.ui.view">
        <field name="name">Accounts Receivable Summary</field>
        <field name="model">account.report.receivable.summary</field>
        <field name="arch" type="xml">
            <form string="Report Options">
                <field name="company_id" invisible="1"/>
                <group col="4">
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <group>
                    <field name="account_id" options="{'no_create': True}"/>
                </group>
                <footer>
                    <button name="check_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                        or 
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_account_receivable_summary_menu" model="ir.actions.act_window">
        <field name="name">Accounts Receivable Summary</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.report.receivable.summary</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="account_report_receivable_summary_view"/>
        <field name="target">new</field>
    </record>
    
</data>
</odoo>
