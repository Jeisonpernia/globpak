<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="report_purchasequotation_document_extend" inherit_id="purchase.report_purchasequotation_document">
        <xpath expr="//div[@class='page']" position="replace">

            <div class="page">
            <div class="oe_structure"/>
            <div class="row">
                <div class="col-xs-12">
                    <h3>Request for Quotation</h3>
                </div>
            </div>
            <div class="row">
                <div t-if="o.name" class="col-xs-12 text-right">
                    <strong>Our Order Reference:</strong>
                    <p t-field="o.name"/>
                </div>
                <div t-if="o.partner_ref" class="col-xs-12 text-right">
                    <strong>Your Order Reference</strong>
                    <p t-field="o.partner_ref"/>
                </div>
                <div t-if="o.date_order" class="col-xs-12 text-right">
                    <strong>Order Date:</strong>
                    <p t-field="o.date_order"/>
                </div>
            </div>
            <div class="row" style="font-size: 12px">
                <!--<div class="col-xs-6">-->
                <!--    <strong>Shipping address:</strong>-->
                <!--    <div t-if="o.dest_address_id">-->
                <!--        <div t-field="o.dest_address_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;, &quot;fax&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>-->
                <!--    </div>-->

                <!--    <div t-if="not o.dest_address_id and o.picking_type_id and o.picking_type_id.warehouse_id">-->
                <!--        <span t-field="o.picking_type_id.warehouse_id.name"/>-->
                <!--        <div t-field="o.picking_type_id.warehouse_id.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;phone&quot;, &quot;fax&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>-->
                <!--    </div>-->
                <!--</div>-->
                <div class="col-xs-6">
                    <strong>Supplier:</strong>
                    <div t-if="o.partner_id">
                        <div t-field="o.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;, &quot;fax&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                    </div>
                </div>
                <!--<div class="col-xs-5 col-xs-offset-1">-->
                <!--    <div t-field="o.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;, &quot;fax&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>-->
                <!--        <p t-if="o.partner_id.vat">VAT: <span t-field="o.partner_id.vat"/></p>-->
                <!--</div>-->
                <div class="col-xs-5 col-xs-offset-1">
                    <div t-if="o.x_client_id">
                        <strong>Customer:</strong>
                        <p t-field="o.x_client_id"/>
                        <p t-field="o.x_client_id.contact_address"/>
                    </div>
                </div>
            </div>

            <!--<h2 t-if="o.state != 'draft'">Purchase Order Confirmation #<span t-field="o.name"/></h2>-->
            <!--<h2 t-if="o.state == 'draft'">Request for Quotation #<span t-field="o.name"/></h2>-->

            <div class="row mt32 mb32" style="font-size: 12px">
                <!--<div t-if="o.name" class="col-xs-3">-->
                <!--    <strong>Our Order Reference:</strong>-->
                <!--    <p t-field="o.name"/>-->
                <!--</div>-->
                <!--<div t-if="o.partner_ref" class="col-xs-3">-->
                <!--    <strong>Your Order Reference</strong>-->
                <!--    <p t-field="o.partner_ref"/>-->
                <!--</div>-->
                <!--<div t-if="o.date_order" class="col-xs-3">-->
                <!--    <strong>Order Date:</strong>-->
                <!--    <p t-field="o.date_order"/>-->
                <!--</div>-->
                <div t-if="o.payment_term_id" class="col-xs-3">
                    <strong>Payment Terms:</strong>
                    <p t-field="o.payment_term_id"/>
                </div>
                <div t-if="o.date_planned" class="col-xs-3">
                    <strong>Delivery Schedule:</strong>
                    <p t-field="o.date_planned" widget="date"/>
                </div>
                <div t-if="o.x_client_po_no" class="col-xs-3">
                    <strong>End User PO No.:</strong>
                    <p t-field="o.x_client_po_no"/>
                </div>
                <div t-if="o.x_client_po_no" class="col-xs-3">
                    <strong>Origin:</strong>
                    <p t-field="o.x_origin"/>
                </div>
            </div>

            <table class="table table-condensed" style="font-size: 12px">
                <thead>
                    <tr>
                        <th><strong>Item Code</strong></th>
                        <th class="col-xs-4"><strong>Description</strong></th>
                        <th><strong>Taxes</strong></th>
                        <!--<th class="text-center"><strong>Date Req.</strong></th>-->
                        <th class="text-right"><strong>Qty</strong></th>
                        <th class="text-right"><strong>Unit</strong></th>
                        <th class="text-right"><strong>Unit Price</strong></th>
                        <th class="text-right"><strong>Net Price</strong></th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="o.order_line" t-as="line">
                        <td>
                            <span t-field="line.product_id.code"/>
                        </td>
                        <td>
                            <span t-field="line.product_id.name"/><br/>
                            <span t-foreach="line.product_id.attribute_line_ids" t-as="variant">
                                <span t-field="variant.attribute_id.name"/>: <span t-field="variant.value_ids.name"/><br/>
                            </span>
                        </td>
                        <td>
                            <span t-esc="', '.join(map(lambda x: x.name, line.taxes_id))"/>
                        </td>
                        <!--<td class="text-center">-->
                        <!--    <span t-field="line.date_planned"/>-->
                        <!--</td>-->
                        <td class="text-right">
                            <span t-field="line.product_qty"/>
                            <!--<span t-field="line.product_uom.name" groups="product.group_uom"/>-->
                        </td>
                        <td class="text-right">
                            <span t-field="line.product_uom.name" groups="product.group_uom"/>
                        </td>
                        <td class="text-right">
                            <span t-field="line.price_unit"/>
                        </td>
                        <td class="text-right">
                            <span t-field="line.price_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="row" style="font-size: 12px">
                <div class="col-xs-4 pull-right">
                    <table class="table table-condensed">
                        <!--<tr class="border-black">-->
                        <!--    <td><strong>Total Without Taxes</strong></td>-->
                        <!--    <td class="text-right">-->
                        <!--        <span t-field="o.amount_untaxed" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>-->
                        <!--    </td>-->
                        <!--</tr>-->
                        <tr class="border-black">
                            <td>Taxes</td>
                            <td class="text-right">
                                <span t-field="o.amount_tax" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                            </td>
                        </tr>
                        <tr class="border-black">
                            <td><strong>Total</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

            <p t-field="o.notes" style="font-size: 11px"/>
            <!--<div class="oe_structure"/>-->
            <br/>
            <div class="col-xs-6">
                <strong>Prepared By: </strong><span t-field="o.x_prepared_by"/>
            </div>
            <div class="col-xs-6 pull-right">
                <strong>Approved By: </strong><span t-field="o.x_approved_by"/> 
            </div>
            <div class="oe_structure"/>
        </div>

        </xpath>
    </template>



</odoo>
