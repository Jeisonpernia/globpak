<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
<template id="report_invoice_document_extend" inherit_id="account.report_invoice_document">
    <xpath expr="//t[@t-call='web.external_layout']" position="replace">
    <t t-call="globpak.external_layout_accounting">
    <!-- <xpath expr="//div[@class='page']" position="replace"> -->
        <div class="page">
            <div class="row text-right">
                <h3>
                    <span t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">Invoice</span>
                    <span t-if="o.type == 'out_invoice' and o.state == 'proforma2'">PRO-FORMA</span>
                    <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                    <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                    <span t-if="o.type == 'out_refund'">Refund</span>
                    <span t-if="o.type == 'in_refund'">Vendor Refund</span>
                    <span t-if="o.type == 'in_invoice'">Vendor Bill</span>
                    <span t-field="o.number"/>
                </h3>
                <div class="col-xs-12" t-if="o.date_invoice">
                    <strong>Invoice Date: </strong><span t-field="o.date_invoice"/>
                </div>
                <!--<div class="col-xs-12" t-if="o.date_due and o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">
                    <strong>Due Date: </strong><span t-field="o.date_due"/>
                </div>-->
            </div>

            <br/>

            <div class="row">
                <div name="invoice_address" class="col-xs-5 col-xs-offset-7">
                    <address t-field="o.partner_id"
                        t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                    <span t-if="o.partner_id.vat">TIN: <span t-field="o.partner_id.vat"/></span>
                </div>
            </div>

            <div class="row mt32 mb32">
                <div class="col-xs-2" t-if="o.po_no">
                    <strong>PO No:</strong>
                    <p t-field="o.po_no"/>
                </div>
                <div class="col-xs-2" t-if="o.payment_term_id">
                    <strong>Terms:</strong>
                    <p t-field="o.payment_term_id"/>
                </div>
                <div class="col-xs-2" t-if="o.user_id">
                    <strong>Rep:</strong>
                    <p t-field="o.user_id"/>
                </div>
                <div class="col-xs-2" t-if="o.dr_no">
                    <strong>DR No:</strong>
                    <p t-field="o.dr_no"/>
                </div>
                <div class="col-xs-2" t-if="o.dr_date">
                    <strong>DR Date:</strong>
                    <p t-field="o.dr_date" widget="date" />
                </div>
                <div class="col-xs-2" t-if="o.date_due and o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">
                    <strong>Due Date: </strong>
                    <p t-field="o.date_due"/>
                </div>
                <div name="reference" class="col-xs-2" t-if="o.reference and o.type == 'in_invoice'">
                    <strong>Reference:</strong>
                    <p t-field="o.reference"/>
                </div>
            </div>

            <!-- Is there a discount on at least one line? -->
            <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>

            <table class="table table-condensed" style="font-size: 12px">
                <thead>
                    <tr>
                        <th>Description</th>
                        <th class="hidden">Source Document</th>
                        <th class="text-right">Quantity</th>
                        <th class="text-right">Unit Price</th>
                        <th t-if="display_discount" class="text-right">Disc.(%)</th>
                        <!--<th class="text-right">Taxes</th>-->
                        <th class="text-right">Amount</th>
                    </tr>
                </thead>
                <tbody class="invoice_tbody">
                    <tr t-foreach="o.invoice_line_ids" t-as="l">
                        <td><span t-field="l.name"/></td>
                        <td class="hidden"><span t-field="l.origin"/></td>
                        <td class="text-right">
                            <span t-field="l.quantity"/>
                            <span t-field="l.uom_id"  groups="product.group_uom"/>
                        </td>
                        <td class="text-right">
                            <span t-field="l.price_unit" />
                        </td>
                        <td t-if="display_discount" class="text-right">
                            <span t-field="l.discount"/>
                        </td>
                        <!--<td class="text-right">
                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.invoice_line_tax_ids))"/>
                        </td>-->
                        <!-- <td class="text-right">
                            <span t-esc="'%.2f'%(l.price_subtotal)" />
                        </td> -->
                        <td class="text-right">
                            <span t-field="l.price_subtotal" t-options='{"widget": "monetary", "display_currency": o.currency_id}' />
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="clearfix">
                <div id="total" class="row pull-right">
                    <div>
                        <table class="table-condensed" style="min-width: 250px;max-width: 400px; font-size: 12px">
                            <tr class="border-black" style="border-bottom:1px solid #dddddd;">
                                <td>Vatable Sales</td>
                                <td class="text-right">
                                    <!-- <span t-esc="'%.2f'%(o.vat_sales)" /> -->
                                    <span t-field="o.vat_sales" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                            <tr style="border-bottom:1px solid #dddddd;">
                                <td>Vat Exempt Sales</td>
                                <td class="text-right">
                                    <!-- <span t-esc="'%.2f'%(o.vat_exempt_sales)" /> -->
                                    <span t-field="o.vat_exempt_sales" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                            <tr style="border-bottom:1px solid #dddddd;">
                                <td>Zero Rated Sales</td>
                                <td class="text-right">
                                    <!-- <span t-esc="'%.2f'%(o.zero_rated_sales)" /> -->
                                    <span t-field="o.zero_rated_sales" t-options='{"widget": "monetary", "display_currency": o.currency_id}' />
                                </td>
                            </tr>
                            <t t-foreach="o._get_tax_amount_by_group()" t-as="amount_by_group">
                                <tr style="border-bottom:1px solid #dddddd;">
                                    <td>
                                        <span t-esc="amount_by_group[0] if len(o.tax_line_ids) > 1 else (o.tax_line_ids.tax_id.description or o.tax_line_ids.tax_id.name)"/>
                                        <span t-if="o.tax_line_ids.tax_id.amount == 12.0">VAT</span>
                                    </td>
                                    <td class="text-right">
                                        <!-- <span t-esc="'%.2f'%(amount_by_group[1])" /> -->
                                        <span t-esc="amount_by_group[1]" t-options='{"widget": "monetary", "display_currency": o.currency_id}' />
                                    </td>
                                </tr>
                            </t>
                            <tr class="border-black">
                                <td><strong>Total</strong></td>
                                <td class="text-right">
                                     <!-- <span t-esc="'%.2f'%(o.amount_total)" /> -->
                                     <span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}' />
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>

            <p t-if="o.comment" style="font-size: 9px">
                <strong>Terms and Conditions:</strong>
                <p style="font-size: 9px" t-field="o.comment"/>
            </p>
            <!--<p t-if="o.payment_term_id">
                <span t-field="o.payment_term_id.note"/>
            </p>-->
            <!--<p t-if="o.fiscal_position_id.note">
                <strong>Fiscal Position Remark:</strong>
                <span t-field="o.fiscal_position_id.note"/>
            </p>-->
        </div>
    <!-- </xpath> -->
    </t>
    </xpath>
</template>

</data>
</odoo>
