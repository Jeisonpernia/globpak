<template id="report_account_collection_receipt_document">
    <t t-call="globpak.external_layout_accounting">
        <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
        <div class="page">
            <div class="row">
                <div class="text-center">
                    <h3>
                        <span t-if="o.type == 'out_invoice' and o.state == 'paid'">Collection Receipt</span>
                    </h3>
                </div>
            </div>
            
            <div class="row">
                <div class="col-xs-12 text-right" t-if="o.type == 'out_invoice' and o.state == 'paid'">
                    <h5><strong>No: </strong><span t-field="o.number"/></h5>
                </div>
                
                <div class="col-xs-12 text-right" t-if="o.type == 'out_invoice' and o.state == 'paid'">
                    <h5><strong>Date: </strong><span t-field="o.date_invoice"/></h5>
                </div>              
            </div>
                        
            <br/>

            <!-- COMPUTE TOTAL PAYMENT -->
            <t t-set='payment_amount' t-value='0'/>
            <!-- <t t-set='payment_in_words' t-value=''> -->
            <t t-foreach="o.payment_ids" t-as="payment">
                <t t-set='payment_amount' t-value='payment_amount + payment.amount '/>
