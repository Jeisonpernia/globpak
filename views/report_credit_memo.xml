<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
<template id="report_credit_memo_document">
    <t t-call="globpak.external_layout_accounting">
        <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
        <div class="page">
            <div t-if="o.type != 'out_refund'">
                <h3>This report is for refund invoices only.</h3>
            </div>
            <div t-if="o.type == 'out_refund'" class="row text-right">
                <h3>Credit Memo</h3>
                <div class="col-xs-12" t-if="o.credit_memo_id">
                    <strong>CM No.: </strong><span t-field="o.credit_memo_id"/>
                </div>
                <div class="col-xs-12" t-if="o.date_invoice">
                    <strong>Date: </strong><span t-field="o.date_invoice"/>
                </div>
            </div>

            <br />

            <div t-if="o.type == 'out_refund'" class="row">
                <div class="col-xs-12">
                    <div class="col-xs-6">
                        <strong>SOLD TO:</strong>
                        <div t-field="o.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                        <span t-if="o.partner_id.vat">VAT: <span t-field="o.partner_id.vat"/></span>
                        <span t-if="o.partner_id.x_tin">TIN: <span t-field="o.partner_id.x_tin"/></span>    
                    </div>
                    
                    <div t-if="o.partner_shipping_id" class="col-xs-6">
                        <strong>DELIVERED TO:</strong>
                        <div t-field="o.partner_shipping_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"/>
                    </div>
                </div>
            </div>

            <br />

            <div t-if="o.type == 'out_refund'" class="row">
                <div class="col-xs-2" t-if="o.po_no">
                    <strong>PO No:</strong>
                    <p t-field="o.po_no"/>
                </div>
                <div class="col-xs-2" t-if="o.payment_term_id">
                    <strong>Terms:</strong>
                    <p t-field="o.payment_term_id"/>
                </div>
                <div class="col-xs-3" t-if="o.user_id">
                    <strong>Rep:</strong>
                    <p t-field="o.user_id"/>
                </div>
                <!-- <div class="col-xs-2" t-if="o.dr_date">
                    <strong>Delivered:</strong>
                    <p t-field="o.dr_date" widget="date" />
                </div> -->
                <div name="reference" class="col-xs-3" t-if="o.reference and o.type == 'out_refund'">
                    <strong>Reference:</strong>
                    <p t-field="o.reference"/>
                </div>
            </div>

            <table t-if="o.type == 'out_refund'" class="table table-condensed" style="font-size: 12px">
                <thead>
                    <tr>
                        <th>Description</th>
                        <th class="hidden">Source Document</th>
                        <th class="text-right">Quantity</th>
                        <th class="text-right">Unit Price</th>
                        <th t-if="display_discount" class="text-right">Disc.(%)</th>
                        <!--<th class="text-right">Taxes</th>-->
                        <th class="text-right">Amount</th>
                    </tr>
                </thead>
                <tbody class="invoice_tbody">
                    <tr t-foreach="o.invoice_line_ids" t-as="l">
                        <td><span t-field="l.name"/></td>
                        <td class="hidden"><span t-field="l.origin"/></td>
                        <td class="text-right">
                            <span t-field="l.quantity"/>
                            <span t-field="l.uom_id"  groups="product.group_uom"/>
                        </td>
                        <td class="text-right">
                            <span t-field="l.price_unit"/>
                        </td>
                        <td t-if="display_discount" class="text-right">
                            <span t-field="l.discount"/>
                        </td>
                        <!--<td class="text-right">
                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.invoice_line_tax_ids))"/>
                        </td>-->
                        <td class="text-right">
                            <span t-esc="l.price_subtotal_signed" />
                        </td>
                    </tr>
                </tbody>
            </table>

            <div t-if="o.type == 'out_refund'" class="row" style="font-size: 12px">
                <div class="col-xs-4 pull-right">
                    <table class="table table-condensed">
                        <tr class="border-black">
                            <td>Vatable Sales</td>
                            <td class="text-right">
                                <!-- <span t-esc="'%.2f'%(o.vat_sales_signed)" /> -->
                                <span t-esc="o.vat_sales_signed" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                        <tr>
                            <td>Vat Exempt Sales</td>
                            <td class="text-right">
                                <!-- <span t-esc="'%.2f'%(o.vat_exempt_sales_signed)" /> -->
                                <span t-esc="o.vat_exempt_sales_signed" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                        <tr>
                            <td>Zero Rated Sales</td>
                            <td class="text-right">
                                <!-- <span t-esc="'%.2f'%(o.zero_rated_sales_signed)" /> -->
                                <span t-esc="o.zero_rated_sales_signed" t-options='{"widget": "monetary", "display_currency": o.currency_id}' />
                            </td>
                        </tr>
                        <t t-foreach="o._get_tax_amount_by_group()" t-as="amount_by_group">
                            <tr>
                                <td>
                                    <span t-esc="amount_by_group[0] if len(o.tax_line_ids) > 1 else (o.tax_line_ids.tax_id.description or o.tax_line_ids.tax_id.name)"/>
                                    <span t-if="o.tax_line_ids.tax_id.amount == 12.0">VAT</span>
                                </td>
                                <td class="text-right">
                                    <!-- <span t-esc="'%.2f'%(amount_by_group[1] * -1)" /> -->
                                    <span t-esc="amount_by_group[1] * -1" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                        </t>
                        <tr class="border-black">
                            <td><strong>Total</strong></td>
                            <td class="text-right">
                                 <!-- <span t-esc="'%.2f'%(o.amount_total_signed)" /> -->
                                 <span t-esc="o.amount_total_signed" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

            <div t-if="o.type == 'out_refund'" style="position: absolute; top: 800px; width: 100%; font-size: 12px;">
                <div class="col-xs-4">
                    <strong>Prepared By: </strong><br/><br/>
                    <span>____________________</span><br/>
                    <span t-field="o.user_id"/>    
                </div>
                <div class="col-xs-4">
                    <strong>Checked By: </strong><br/><br/>
                    <span>____________________</span><br/>
                    <span t-field="o.x_checked_by"/>                    
                </div>
                <div class="col-xs-4 pull-right">
                    <strong>Approved By: </strong><br/><br/>
                    <span>____________________</span><br/>
                    <span t-field="o.x_approved_by"/>                    
                </div>
            </div>

        </div>
    </t>
</template>

<template id="report_credit_memo">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="globpak.report_credit_memo_document" t-lang="o.partner_id.lang"/>
        </t>
    </t>
</template>

</data>
</odoo>